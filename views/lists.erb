<ul id="lists">
  <% list_sort(@lists) do |list, index| %>
    <li class="<%= list_class(list) %>">
    <a href="/lists/<%= index %>">
        <h2><%= list[:name]%></h2>
    <p><%= tasks_complete(list) %> / <%= list[:todos].size %></p>
    </a>
    </li>
  <% end %>
</ul>

<% content_for :header_links do %>
  <a class="add" href="/lists/new">New List </a>
<% end %>
